<?xml version='1.0' encoding='utf-8'?>
<widget id="com.colegios.pizarraMobile" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>Pizarra Blanca</name>
	<description>
        Portal informativo para padres sobre las noticias escolares que debe recibir de sus hijos.
	</description>
	<author email="info@pizarrablanca.org" href="http://pizarrablanca.org">
		Pizarra Blanca 
	</author>    
	<content src="index.html" />
	<plugin name="cordova-plugin-whitelist" version="1" />
	<access origin="*" />
	    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<icon src="res/logo.png" />
</widget>
